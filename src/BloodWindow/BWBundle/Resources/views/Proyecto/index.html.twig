{% extends '::base.html.twig' %}

{% block body -%}

    <h1>Proyecto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tituloespaniol</th>
                <th>Tituloingles</th>
                <th>Pais</th>
                <th>Duracion</th>
                <th>Sinopsisespaniol</th>
                <th>Sinopsisingles</th>
                <th>Presupuesto</th>
                <th>Financiacionespaniol</th>
                <th>Financiacioningles</th>
                <th>Objetivoespaniol</th>
                <th>Objetivoingles</th>
                <th>Estadoespaniol</th>
                <th>Estadoingles</th>
                <th>Visionespaniol</th>
                <th>Visioningles</th>
                <th>Cvprodespaniol</th>
                <th>Cvprodingles</th>
                <th>Cvdirespaniol</th>
                <th>Cvdiringles</th>
