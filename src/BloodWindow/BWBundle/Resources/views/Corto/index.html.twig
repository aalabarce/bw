{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Corto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Anio</th>
                <th>Generofk</th>
                <th>Festivalfk</th>
                <th>Url</th>
                <th>Duracion</th>
                <th>Director</th>
                <th>Compania</th>
                <th>Telefono</th>
                <th>Sitioweb</th>
                <th>Sinopsisespaniol</th>
                <th>Sinopsisingles</th>
                <th>Nominado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_corto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.anio }}</td>
                <td>{{ entity.generoFk }}</td>
                <td>{{ entity.festivalFk }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.duracion }}</td>
                <td>{{ entity.director }}</td>
                <td>{{ entity.compania }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.sitioWeb }}</td>
                <td>{{ entity.sinopsisEspaniol }}</td>
                <td>{{ entity.sinopsisIngles }}</td>
                <td>{{ entity.nominado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_corto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_corto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_corto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
