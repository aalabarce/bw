<script>
function enviar()
	{
      	$("#register-form").submit();	
    }

$(function() {
	$(document).ready(function() {

     $("form input").keypress(function (e) {
        if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {
            $("#register-form").submit();	
            return false;
        } else {
            return true;
        }
    });

});

})
</script>	

