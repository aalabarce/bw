{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<script>
	
function enviar() 
{
   	$("#login-form").submit();	
}


$(document).ready(function() {

     $("form input").keypress(function (e) {
        if ((e.which && e.which == 13) || (e.keyCode && e.keyCode == 13)) {
            $("#login-form").submit();	
            return false;
        } else {
            return true;
        }
    });

    $("#ingles").click(function() {
    	alert();
    });

});


</script>
<form id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<div class="container-fluid"> <!-- contenedor principal -->
  		<div class="row cont-log">
  			<div class="col-lg-2 col-md-2 col-sm-1 col-xs-1"></div>
			<div class="col-lg-8 col-md-8 col-sm-10 col-xs-10">
				<h1>Blood Window</h1>
				<h2>Latin American Fantastic Film Market</h2>
				<section>
					<p>ingresá</p>
					<input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  placeholder="Usuario..." />
					<input type="password" id="password" name="_password" required="required" placeholder="Contraseña..." />
					{% if error %}
						<div class="errores">{{ error|trans }}</div>
					{% endif %}
					<a href="javascript: enviar();" class="btn-enviar-log btn-block text-center">Ingresar</a>
					<div class="cont-reg">
						<!-- <a href="#" class="olvide pull-left">olvidé contraseña</a> -->
						<a href="/web/register" class="registrate pull-right">registrate</a>
					</div>
				</section>
			</div>
  			<div class="col-lg-2 col-md-2 col-sm-1 col-xs-1"></div>
  		</div>
	</div>
</form>

<style>
.errores {
	font-size: 14px;
	margin-bottom: 6px;
	text-transform: uppercase;
	text-align: center;
}
</style>

{% endblock fos_user_content %}
